<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Person" table="person">
    <indexes>
      <index name="fk_person_user1_idx" columns="user_iduser"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="idperson_UNIQUE" columns="idperson"/>
    </unique-constraints>
    <id name="idperson" type="integer" column="idperson"/>
    <id name="useruser" association-key="true"/>
    <field name="name" type="string" column="name" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lastName" type="string" column="last_name" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="photo" type="string" column="photo" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="staticPhoto" type="string" column="static_photo" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="birthdate" type="date" column="birthdate" nullable="false"/>
    <field name="gender" type="string" column="gender" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <one-to-one field="useruser" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="user_iduser" referenced-column-name="iduser"/>
      </join-columns>
    </one-to-one>
  </entity>
</doctrine-mapping>
