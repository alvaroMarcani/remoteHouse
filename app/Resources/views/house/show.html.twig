{% extends 'base.html.twig' %}

{% block title %}Ver Casa{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="user-data m-b-30">
            <h3 class="title-3 m-b-30">
                <i class="zmdi zmdi-account-calendar"></i>Mi Casa: {{ app.user.person.fullName }}</h3>

            <div class="row card-body">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">

                            <div id="map" style="height: 400px;width: 100%;"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="mx-auto d-block p-3">
                            <img height="400px" width="400px" class="mx-auto d-block" src="{{ asset('uploads/photos/'~house.photo)|default(asset('assets/images/icon/avatar-big-01.jpg')) }}" alt="Card image cap">
                        </div>
                        <div class="table-responsive">
                            <table class="table table-top-campaign">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ house.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ house.name }}</td>
                                </tr>
                                <tr>
                                    <th>Latitud y Longitud</th>
                                    <td>{{ house.latitude }}, {{ house.longitude }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="card">
            <div class="card-header">
                <h3>Cuartos</h3>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-3">
                        <div class="card">
                            <img class="card-img-top" src="{{ asset('assets/images/bg-title-01.jpg') }}" alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title">Titulo Cuarto</h4>
                                <div class="table-data-feature">
                                    <a href="{#{ path('house_show', { 'id': house.id }) }#}" class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ver">
                                        <i class="zmdi zmdi-eye"></i>
                                    </a>
                                    <a href="{#{ path('house_edit', { 'id': house.id }) }#}" class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-3 card align-middle">
                        <div class="card-body">
                            <a href="{{ path('demo') }}">
                                <img height="200px" width="200px" src="{{ asset('assets/img/add-icon.png') }}"><br>
                                <b style="padding-left: 45px" class="text-center align-items-center align-content-center text-lg-center">Agregar mas</b>
                            </a>
                        </div>
                    </div>

                </div>


                {% if house.rooms is not null %}
                    {% for room in house.rooms %}

                        {% else %}

                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>




    <ul>
        <li>
            <a href="{{ path('house_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('house_edit', { 'id': house.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <p>Some text in the modal.</p>
                    {{ render(controller('AppBundle:Room:new')) }}
                    {#{{ render(controller('AppBundle:SecurityClearence:show',{ 'id': securityClearence.id })) }}#}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/gmap-house.js') }}"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBQ-5siJeJh7kO5hYqC1w8pU5c8PF40_QA&libraries=places&callback=initMap">
    </script>
    <script>
        $(document).ready(function () {
            lat='{{ house.latitude }}';
            long='{{ house.longitude }}';
            loadStoredMarker(lat,long);

            $('#mediumModal').on('shown.bs.modal', function () {
                $('#myInput').trigger('focus')
            })
        });
    </script>
{% endblock %}